{
  "database": {
    "master": {
      "dsn": "user:password@tcp(master-db:3306)/chat_db?charset=utf8mb4&parseTime=True&loc=Local",
      "max_open_conns": 100,
      "max_idle_conns": 10,
      "conn_max_lifetime": 3600000000000
    },
    "slaves": [
      {
        "dsn": "user:password@tcp(slave1-db:3306)/chat_db?charset=utf8mb4&parseTime=True&loc=Local",
        "weight": 1,
        "max_open_conns": 50,
        "max_idle_conns": 5,
        "conn_max_lifetime": 3600000000000
      },
      {
        "dsn": "user:password@tcp(slave2-db:3306)/chat_db?charset=utf8mb4&parseTime=True&loc=Local",
        "weight": 1,
        "max_open_conns": 50,
        "max_idle_conns": 5,
        "conn_max_lifetime": 3600000000000
      }
    ],
    "sharding": {
      "enabled": true,
      "shard_count": 8,
      "strategy": "hash",
      "tables": [
        {
          "table_name": "messages",
          "shard_key": "from_user_id",
          "shard_suffix": "_%02d"
        },
        {
          "table_name": "group_messages",
          "shard_key": "group_id", 
          "shard_suffix": "_%02d"
        },
        {
          "table_name": "users",
          "shard_key": "id",
          "shard_suffix": "_%02d"
        }
      ]
    },
    "max_retries": 3,
    "retry_delay": 1000000000
  },
  "monitoring": {
    "enabled": true,
    "slow_query_threshold": 1000000000,
    "connection_pool_monitor": true,
    "health_check_interval": 30000000000
  },
  "cache": {
    "enabled": true,
    "type": "redis",
    "redis": {
      "addr": "redis:6379",
      "password": "",
      "db": 0,
      "pool_size": 10
    },
    "ttl": {
      "user_cache": 300000000000,
      "message_cache": 60000000000, 
      "session_cache": 1800000000000
    }
  },
  "_comments": {
    "time_format_note": "所有时间配置使用纳秒数值：1s = 1000000000ns, 1m = 60000000000ns, 1h = 3600000000000ns",
    "mysql_master_slave_config": {
      "master_config": {
        "server-id": 1,
        "log-bin": "mysql-bin",
        "binlog-format": "ROW"
      },
      "slave_config": {
        "server-id": 2,
        "relay-log": "mysql-relay-bin",
        "read-only": 1
      },
      "replication_setup": "CHANGE MASTER TO MASTER_HOST='master-db', MASTER_USER='replication_user', MASTER_PASSWORD='replication_password', MASTER_LOG_FILE='mysql-bin.000001', MASTER_LOG_POS=0; START SLAVE;"
    },
    "sharding_design": {
      "user_table": "按用户ID进行哈希分片，保证用户数据的均匀分布",
      "message_table": "单聊消息按发送者ID分片，群聊消息按群组ID分片",
      "database_naming": "chat_db_shard_00, chat_db_shard_01, ..., chat_db_shard_07"
    }
  }
} 